<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bạn Muốn Mua Sản Phẩm Này"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        />
    <ImageView
        android:src="@drawable/ic_launcher_background"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageview_billing"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txttensp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ten san pham"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#C83F13"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/txtgiasp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gia san pham"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#FF00"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/soluongsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So luong san pham"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#FF00"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="So luong san pham"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        android:textColor="#C34922"
        android:layout_gravity="center_horizontal"
        />
    <RelativeLayout
        android:id="@+id/googlePayButton"
        android:clickable="true"
        android:focusable="true"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:background="@drawable/custom_button_googlepay"
        android:padding="2dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/buy_with_googlepay_button_content_description">
        <LinearLayout
            android:duplicateParentState="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:scaleType="fitCenter"
                android:duplicateParentState="true"
                android:src="@drawable/buy_with_googlepay_button_content"/>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true"
            android:scaleType="fitXY"
            android:src="@drawable/googlepay_button_overlay" />
    </RelativeLayout>

</LinearLayout>